<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:paddingHorizontal="30dp"
        android:background="@color/color1"
        android:elevation="10dp"
        android:layoutDirection="ltr"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:src="@drawable/coin"
            android:elevation="10dp"

            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="1200"
            android:fontFamily="@font/luckiest_guy"
            android:padding="5dp"
            android:textColor="@color/color2"
            android:textSize="20sp"
            android:gravity="bottom"
            android:id="@+id/worldsNumOfCoinsTV"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/fb_spoiler"
            android:paddingStart="30dp"
            android:textColor="@color/color2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:id="@+id/hardTimerTV"/>



        <ToggleButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textOff=" "
            android:textOn=" "
            android:layout_marginHorizontal="7dp"
            android:background="@drawable/sound_on_off"
            android:id="@+id/worldsSound"


            android:layout_height="30dp"/>

        <ToggleButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textOff=" "
            android:textOn=" "
            android:layout_marginHorizontal="7dp"
            android:background="@drawable/on_off_music"
            android:id="@+id/worldsMusic"

            android:layout_height="30dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/birdhouse"
            android:id="@+id/backHome"
            android:layout_marginHorizontal="7dp"
            android:layout_height="30dp"/>



    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="17"
        android:id="@+id/recycler"/>
</LinearLayout>